/* component/menu/index.wxss */
.mask{
    position: fixed;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
    background: #fff;
    opacity: .96;
}

.menu{
    position: fixed;
    bottom:176rpx;
    right: 46rpx;
}
.menu_btn{
    width: 132rpx;
    height: 132rpx;
    transform: rotate(90deg);
}

.menu_icon{
    width: 144rpx;
    height: 144rpx;
}

.showMask{animation: showMask .3s forwards;}
.hideMask{animation: hideMask .3s forwards;}

@keyframes showMask {
    0%{opacity: 0;display: block }
    100%{opacity: .96;display: block }
}
@keyframes hideMask {
    0%{opacity: .96;display: block}
    100%{opacity: 0;display: none}
}
/* 按钮旋转 */
.rotate180{ animation: rotate180 .3s forwards;}
.rotate90{ animation: rotate90 .3s forwards;}
@keyframes rotate180 {
    0%{transform: rotate(90deg)}
    100%{transform: rotate(180deg)}
}
@keyframes rotate90 {
    0%{transform: rotate(180deg)}
    100%{transform: rotate(90deg)}
}