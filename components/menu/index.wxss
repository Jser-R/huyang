/* component/menu/index.wxss */
.mask{
    position: fixed;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
    background: #fff;
    opacity: .96;
    display: none
}

.menu{
    position: fixed;
    bottom:80rpx;
    right: 20rpx;
}
.menu_btn{
    width: 132rpx;
    height: 132rpx;
    vertical-align: middle;
    /*transform: rotate(90deg);*/
}

.menu_icon{
    width: 144rpx;
    height: 144rpx;
    /* display: none */
}
.menu_li{
  display: none;
  /* opacity: 0 */
}

.showMask{animation: showMask .3s forwards;display: block }
.hideMask{animation: hideMask .3s forwards;}

@keyframes showMask {
    0%{opacity: 0;}
    100%{opacity: .96; }
}
@keyframes hideMask {
    0%{opacity: .96;}
    100%{opacity: 0;}
}
/* 按钮旋转 */
.rotate180{ animation: rotate180 .3s forwards;}
.rotate90{ animation: rotate90 .3s forwards;}
@keyframes rotate180 {
    0%{transform: rotate(0deg)}
    100%{transform: rotate(90deg)}
}
@keyframes rotate90 {
    0%{transform: rotate(90deg)}
    100%{transform: rotate(0deg)}
}
