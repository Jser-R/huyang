<!--component/menu/index.wxml-->
<!-- 遮罩层 -->
<text class="mask {{isShowMask?'showMask':'hideMask'}}" ></text>

<!-- 菜单按钮 -->
<view class="menu"> 
    <block wx:for="{{menuList}}">
        <view class="menu_li {{isShowMask?'rotate180':'rotate90'}} ">
            <image class="menu_icon"  src='{{"/images/icon/"+item.icon}}'></image>
        </view>
    
    </block>
    
    
    <image class="menu_btn  {{isShowMask?'rotate180':'rotate90'}} " catchtap='toggleMenu' src='/images/icon/menu.png'></image>
</view>
