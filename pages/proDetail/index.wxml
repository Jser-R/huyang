<!--pages/proDetail/index.wxml-->
<view class="bg"></view>
<!--公司内容-->
<view class="topWrap">
  <view class="top">
	<image class="logo l" src="https://6465-dev-d6b769-1258442598.tcb.qcloud.la/images/programs/location.png?sign=d62c6b7646b3c888b45c3cd6aacbc105&t=1552540406"></image>
	<view class="f36 bold title">{{proDetail.companyName}}<span class="f24">（已上线）</span></view>
	<view class="f26">{{proDetail.position}}</view>
  </view>
  <view class="bot">
	<block wx:for="{{proDetail.companyArr}}" wx:key="{{index}}">
	  <view class="item t_center">
		<view class="f28 bold">{{item.value}}</view>
		<view class="f24 grey9">{{item.key}}</view>
	  </view>
	</block>
  </view>
</view>


<!--工作经历内容-->
<view class="contentWrap">
  
  
  <!--作品内容区-->
  <view class="versionsSwiper">
	<block  wx:for="{{proDetail.programArr.versions}}" wx:key="{{index}}">
	  <view class="programVersion f26 grey9"
			bindtap="slideUpVersion"
			data-item="{{item}}"
			data-index="{{index}}">
		{{item.version}} iPhone
		<view class="swiperNum f40 bold"  hidden="{{item.hidden}}">{{item.activeIndex}}/<text class="f28">{{item.images.length}}</text></view>
	  </view>
	  <scroll-view class='scrollX work' scroll-x
				   hidden="{{item.hidden}}"
				   bindscroll="versionScroll"
				   data-item="{{item}}"
				   data-index="{{index}}">
		<block  wx:for="{{item.images}}"
				wx:for-item="image"
				wx:for-index="imageIndex"
				wx:key="{{imageIndex}}">
		  <view class="imageItem">
			<image src="{{image}}" lazy-load></image>
		  </view>
		</block>
	  </scroll-view>
	</block>
	
  </view>
</view>


<menu></menu>


