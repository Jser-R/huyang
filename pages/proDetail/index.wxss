/*******************公司内容************************/
.topWrap{
    width:690rpx;
    height:326rpx;
    box-sizing: border-box;
    padding: 30rpx 30rpx 0;
    background:#fff;
    box-shadow:0 4rpx 20rpx 0 rgba(0,0,0,0.1);
    border-radius:20rpx;
    margin: -158rpx  auto 30rpx;
}
.topWrap .top{
    height: 116rpx;
    margin-bottom: 56rpx;
}

.topWrap .top .logo{
    width: 116rpx;
    height: 116rpx;
    margin-right: 30rpx;
}
.topWrap .top .title{
    padding: 12rpx 0 16rpx;

}

.topWrap .bot{
    display: flex;
}
.topWrap .bot .item{
    width: 222rpx;
    position: relative;
}
.topWrap .bot .item:after{
    content: '';
    position: absolute;
    right: 0;
    top:18rpx;
    width:2rpx;
    height:42rpx;
    background: #e9e9e9;

}

.topWrap .bot .item:last-child:after{
    background: none;
}
