<view class="topWrap">
    <view  class="inner">

        <view class='avatar'></view>

        <view class="content t_center">
            <view><image src="/images/homePage/name.png" lazy-load/></view>
            <view class='f28 bold'>5年+工作经验</view>
            <view class='f24'>“正确的做设计”比“做正确的设计重要的多”</view>
        </view>
    </view>


</view>

<view class="contentWrap">
  <!-- 问与答 -->
  <view class="titleWrap">
    <view>
      <view class='bold f28'>问与答</view>
      <view class='f22'>Q&A</view>
    </view>

    <view class='f24 g9b right'>已解答{{QAList.length}}个问题</view>
  </view>

  <view class="content">
    <view class="QAList f40">
      <block wx:for="{{QAList}}"  wx:key="index" >
        <image class="{{item.drop?'dropAnimation':item.className}}"
               catchtap='changeQA'
               data-index='{{index}}'
               data-item='{{item}}'
               src="{{'/images/homePage/'+item.pic}}"></image>
      </block>
    </view>
  </view>

  <view class="nav f28 grey9">
    <block wx:for="{{nav}}"
           wx:key="{{index}}">
      <view class="{{navIndex === index?'active':''}}"
            data-index='{{index}}'
            bindtap='changeNav'>{{item.name}}</view>
    </block>
    
  </view>

</view>


<view class="navContent">
  <block wx:for="{{workList}}" wx:key="{{index}}">
    <view bindtap='toDetail' data-item='{{item}}'>
      <image src='{{item.image}}' mode="widthFix" lazy-load ></image>
      <view class="f34 bold title">{{item.name}}</view>
      <view class='f24 grey9 introduce'>{{item.introduce}}</view>
      <view class='f24 time'>{{item.time}}</view>
    </view>

  </block>
</view>




